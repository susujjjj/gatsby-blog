{
    "compilerOptions": {
        "target": "es5",
        "module": "CommonJS",
        "allowJs": true,
        "jsx": "preserve",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "baseUrl": "./src",
        "paths": {
            "compoenents/*": ["./components/*"],
            "utils/*": ["./utils/*"],
            "hooks/*": ["./hooks/*"]
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*.tsx"],
    "exclude": ["node_moduels"]
}